model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  tasks Task[]
}

model Task {
  id  Int   @id @default(autoincrement())
  title     String
  content   String?
  technicianId Int
  technician User @relation(fields: [technicianId], references: [id])
}